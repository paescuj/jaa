{
  "extends": [
    "config:base",
    ":disableDependencyDashboard"
  ],
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "matchPackageNames": ["directus/directus"],
      "versioning": "semver"
    },
    {
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "excludePackagePrefixes": ["@directus"],
      "stabilityDays": 3,
      "automerge": true
    }
  ]
}
